<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.semmi.alumnispacemessaging">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainChatting.AllUserActivity"
            android:label="@string/allUser"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".mainChatting.ChattingActivity"
            android:label="@string/title_activity_chatting"
            android:parentActivityName=".mainChatting.AllUserActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="id.semmi.alumnispacemessaging.mainChatting.AllUserActivity" />
        </activity>
    </application>

</manifest>
